{
	"name": "Default Golang CDE",
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
	"features" : {
		"ghcr.io/devcontainers/features/go:1": {
			"version": "1.24"
		},
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "28.3.2-ubuntu24.04u1"
		},
		"ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
			"version": "1.23"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.Go",
				"ms-azuretools.vscode-docker",
				"ms-kubernetes-tools.vscode-kubernetes-tools",
				"bierner.github-markdown-preview",
				"GitHub.vscode-github-actions"
			]
		}
	},
	"forwardPorts": [8000, 8100, 8001],
	"portsAttributes": {
		"8000": {
			"label": "Fruit Month Price",
			"requireLocalPort": true
		},
		"8100": {
			"label": "Fruit Total Price",
			"requireLocalPort": true
		},
		"8001": {
			"label": "Alternative Test Port",
			"requireLocalPort": true
		},
		"8101": {
            "label": "Alternative Test Port 2",
            "requireLocalPort": true
        }
	},
	"onCreateCommand": "gh extension install https://github.com/nektos/gh-act && go install github.com/goreleaser/goreleaser/v2@latest && go install github.com/anchore/syft/cmd/syft@latest"
}
